{
  "manifest_version": 2,
  "name": "Bitcoin Gas Fee Tracker",
  "version": "1.0",
  "description": "Displays the current Bitcoin gas fees.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://mempool.space/api/v1/fees/recommended"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
